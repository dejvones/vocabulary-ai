<UserControl x:Class="VocabularyAI.GUI.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VocabularyAI.GUI.Views" 
             xmlns:viewmodels="clr-namespace:VocabularyAI.GUI.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:MenuViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="320">
            <Button Content="Slovní hra"
            Command="{Binding NavigateToWordsCommand}"
            Style="{StaticResource MainButton}" Height="64" FontSize="22"/>
            <Button Content="Historie"
            Command="{Binding NavigateToHistoryCommand}"
            Style="{StaticResource MainButton}" Height="64" FontSize="22"/>
            <Button Content="Ukončit" Margin="0,100,0,0"
            Command="{Binding EndCommand}" Background="PaleVioletRed"
            Style="{StaticResource MainButton}" Height="64" FontSize="22"/>
        </StackPanel>
    </Grid>
</UserControl>
